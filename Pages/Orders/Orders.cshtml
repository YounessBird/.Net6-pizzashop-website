@model OrdersModel

<h1>Orders List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                PizzaName
            </th>
            <th>
                PizzaPrice
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var order in Model.OrdersList){
        <tr>
            <th>
                @order.Id
            </th>
            <th>
                @order.PizzaName
            </th>
            <th>
                @order.BasePrice
            </th>
        </tr>

        }
    </tbody>

</table>